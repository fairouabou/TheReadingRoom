<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.thereadingroom.ui.auth.RegisterController"
            prefWidth="400" prefHeight="350">

    <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="60">

        <Label text="Create Account" style="-fx-font-size: 24;" />

        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button text="Register" onAction="#handleRegister" />
        <Button text="Back to Login" onAction="#goToLogin" />

    </VBox>
</AnchorPane>
